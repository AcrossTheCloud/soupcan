{
    "name": "Soupcan",
    "version": "0.4",
    "manifest_version": 3,
    "description": "Support trans people and improving your experience on Twitter",
    "homepage_url": "https://bethylamine.github.io/library/browser-extension/",
    "host_permissions": ["*://*.twitter.com/*"],
    "background": {
        "scripts": ["background.js"]
    },
    "content_scripts": [{
        "all_frames": true,
        "css": ["awesome-notifications/style.css", "wiawbot.css"],
        "js": ["awesome-notifications/index.var.js", "wiawbot.js"],
        "matches": ["*://*.twitter.com/*" ]
    }],
    "action": {
        "default_icon": {
            "16": "icon16.png",
            "24": "icon24.png",
            "32": "icon32.png",
            "48": "icon48.png"
        },
        "default_title": "Soupcan"
    },
    "icons": {
        "16": "icon16.png",
        "32": "icon32.png",
        "48": "icon48.png",
        "128": "icon128.png"
    },
    "permissions": ["contextMenus", "storage"]
}